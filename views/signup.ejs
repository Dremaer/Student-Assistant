<!DOCTYPE html>
<html lang="en-kr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Assistant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/main_screen.css">
  <link rel="stylesheet" href="/css/auth.css">

  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<style>
  body {
    background-color: #25283d;
    color: #fff;
    font-family: 'Roboto', sans-serif;
    margin: 0;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  nav {
    background-color: #25283d;
  }

  nav .nav-link {
    color: white;
  }

  nav .nav-link:hover {
    color: #d4ac0d;
  }

  .auth-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
    gap: 0;
  }

  .auth-form-wrapper,
  .image-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: auto;
  }

  .auth-form-wrapper {
    background-color: #25283d;
    padding: 2rem;
    margin-bottom: 6rem;
    border-radius: 10px;
    width: 100%;
    height: 50%;
    max-width: 450px;
  }

  .auth-form-wrapper h2 {
    color: #f1c40f;
    font-weight: bold;
  }

  .auth-form-wrapper .form-control {
    background-color: #2c3e50;
    border: 1px solid #7f8c8d;
    color: #ecf0f1;
  }

  .auth-form-wrapper .form-control:focus {
    background-color: #2c3e50;
    color: #ecf0f1;
    border-color: #f1c40f;
    box-shadow: 0 0 5px #f1c40f;
  }

  .auth-form-wrapper .btn-primary {
    background-color: #f1c40f;
    border: none;
    color: #2c3e50;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .auth-form-wrapper .btn-primary:hover {
    background-color: #d4ac0d;
  }

  .auth-form-wrapper .text-muted a {
    color: #f1c40f;
    text-decoration: none;
  }

  .auth-form-wrapper .text-muted a:hover {
    text-decoration: underline;
  }

  .image-container {
    background-color: #2c3e50;
    width: 400px;
    border-radius: 10px;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .image-container img {
    max-width: 100%;
    max-height: 100%;
    border-radius: 10px;
  }

  #email::placeholder {
    color: grey;
    /* Replace with your desired color */
  }

  #password::placeholder {
    color: grey;
    /* Replace with your desired color */
  }

  .text-primary {
    text-decoration: none;
    color: #f1c40f !important;
  }
  .text-center1{
    font-size: 33px;
  }
</style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a href="/" class="navbar-brand"><img src="/images/yellow_logo.png" alt="Logo" /></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a href="/quizzes" class="nav-link">Quizzes</a></li>
          <li class="nav-item"><a href="/community" class="nav-link">Community</a></li>
          <li class="nav-item"><a href="/news" class="nav-link">News</a></li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a href="/login" class="nav-link">Log in</a></li>
          <li class="nav-item"><a href="/signup" class="nav-link">Sign up</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Auth Section -->
  <div class="auth-container">
    <div class="auth-form-wrapper">
      <h2 class="text-center text-center1">Register to SA</h2>
      <p class="text-center">Join us today and start your learning journey!</p>
      <form action="/auth/signup" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password"
            required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
      </form>
      <div class="text-center mt-3">
        <p>Already have an account? <a href="/login" class="text-primary"> Log in here</a></p>
      </div>
      <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
      <div class="alert alert-danger text-center mt-3">
        <%= errorMessage %>
      </div>
      <% } %>
    </div>
  </div>

  <footer id="main-footer" class="text-center justify-content-center bg-white fixed-bottom">
    <div class="container">
      <div class="row">
        <div class="col">
          <p>Copyright &copy;
            <span id="year">2024</span> studentassistant.com </p>
        </div>
      </div>
    </div>
  </footer>
  <script src="/js/quizzes.js" defer></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>