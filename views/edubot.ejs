</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a href="/" class="navbar-brand"><img src="/images/yellow_logo.png" /></a>
          <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto">
              <li class="nav-item active">
                <a href="/quizzes" class="nav-link">Quizzes</a>
              </li>
              <li class="nav-item">
                <a href="/quiz_template" class="nav-link">Templates</a>
              </li>
              <li class="nav-item">
                <a href="/community" class="nav-link">Community</a>
              </li>
              <li class="nav-item">
                <a href="/edubot" class="nav-link">EduBot</a>
              </li>
            </ul>

            <div class="navbar-nav ms-auto">
              <li class="nav-item">
                <a href="#" class="nav-link" id="log-in">Log In</a> <!-- ID 추가 -->
              </li>
              <li class="nav-item">
                <button type="button" class="btn"><a href="#" class="nav-link ">Sign Up</a></button>
              </li>
            </div>
          </div>
        </div>
      </nav>

        
      <div class="edubot-container">
        <div class="icon-container">
            <i class="bi bi-sliders"></i> 
        </div>
        <h2 class="edubot-title">Edubot</h2>
        <div class="button-group">
            <button class="edubot-button">Ask me any questions related to your study.</button>
            <button class="edubot-button">Offer study tips for materials.</button>
        </div>
        <div class="input-group">
            <input type="text" class="edubot-input" placeholder="Enter inquiries...">
            <button class="generate-button">Generate</button>
        </div>
    </div>
    

        <div class="modal-background" id="signup-modal">
          <div class="modal-content">
            <h2 class="modal-title">Create your account</h2>
            <button class="close-btn" id="signup-close-btn">&times;</button>
            <form id="signup-form">
              <label for="email">Email</label>
              <input type="text" id="email" placeholder="Email" required>
              
              <label for="password">Password</label>
              <div class="password-container">
                <input type="password" id="password" placeholder="Password" required>
                <i class="toggle-password bi bi-eye-slash"></i>
              </div>
        
              <button type="submit" class="get-started-btn">Get started</button>
              
              <p class="terms">
                By creating an account, I agree to StudentAssistant’s
                <a href="#">Website Terms</a>, <a href="#">Privacy Policy</a>, and
                <a href="#">Licensing Terms</a>.
              </p>
              <p class="signup">
                Already have an account? <a href="#">Log in</a>
              </p>
            </form>
          </div>
        </div>
        
        

<!-- Modal Background -->
<div class="modal-background" id="login-modal">
  <div class="modal-content">
    <h2 class="modal-title">Login</h2>
    <button class="close-btn" id="login-close-btn">&times;</button> <!-- 닫기 버튼 추가 -->
    <form id="login-form">
      <label for="email">Email</label>
      <input type="text" id="email" placeholder="Email" required>

      <label for="password">Password</label>
      <div class="password-container">
        <input type="password" id="password" placeholder="Password" required>
        <i class="toggle-password bi bi-eye-slash"></i>
      </div>

      <p class="error-message" id="error-message" style="display: none;">
        Email or password aren't valid.
      </p>

      <button type="submit" class="login-btn">Log in</button>

      <p class="signup">
        Don't have an account? <a href="#">Sign Up</a>
      </p>
    </form>
  </div>
</div>

        

        

      <footer id="main-footer" class="text-center justify-content-center bg-white fixed-bottom">
        <div class="container">
          <div class="row">
            <div class="col">
              <p>Copyright &copy;
                <span id="year">2024</span> studentassistant.com </p>
            </div>
          </div>
        </div>
      </footer>
      <script src="/js/modal-login.js" defer></script>
      <script src="/js/modal-signinup.js" defer></script>
      <script src="/js/modal-uploadhub.js" defer></script>
    </body>
</html>