</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a href="/main_screen" class="navbar-brand"><img src="/images/yellow_logo.png" /></a>
          <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto">
              <li class="nav-item active">
                <a href="#" class="nav-link">Quizzes</a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">Templates</a>
              </li>
              <li class="nav-item">
                <a href="/community" class="nav-link">Community</a>
              </li>
              <li class="nav-item">
                <a href="/edubot" class="nav-link">EduBot</a>
              </li>
            </ul>

            <div class="navbar-nav ms-auto">
              <li class="nav-item">
                <a href="#" class="nav-link" id="log-in">Log In</a> <!-- ID 추가 -->
              </li>
              <li class="nav-item">
                <button type="button" class="btn"><a href="#" class="nav-link ">Sign Up</a></button>
              </li>
            </div>
          </div>
        </div>
      </nav>

      <section class="info text-center">
        <div class="container justify-content-center">
          <div class="title">
            <h1 class="text-white">StudentAssistant AI: <br />
            Your Partner in <span>Exam Preparation</span></h1>
            <p class="text">Unlock your study potential! Upload your materials and access <br>
            AI-generated quizzes, flashcards, and practice tests to enhance your learning.</p>
          </div>
            <div class="search-bar input-group mb-3">
              <input type="text" class="form-control" placeholder="Enter topic which you want to prepare" aria-label="Enter topic which you want to prepare">
              <button class="btn btn-warning btn-left" type="button"><i class="bi bi-search"></i></button>
              <button class="btn btn-outline-light btn-right ms-2" type="button">+ Upload Hub</button>
          </div>
        </div>


<!--Upload Hub modal sctructure-->
<div class="modal-background" id="uploadHub-modal">
  <div class="modal-content">
    <h2 class="modal-title">Upload Hub</h2>
    <button class="close-btn" id="uploadHub-close-btn">&times;</button>
    <div class="upload-area" onclick="document.getElementById('file-input').click()">
      <i class="bi bi-file-earmark-arrow-up-fill" id="upload-icon"></i>
      <p>Drag and Drop file here or <span class="choose-file-text">Choose file</span></p>
      <input type="file" id="file-input" onchange="displayFileDetails()">
      <p id="file-name" class="uploaded-file-name"></p>
    </div>

    <div class="tips-section">
      <p>Choose one tip:</p>
      <div class="tip-options">
        <button class="tip-btn" onclick="selectOption('Quiz')">Quiz</button>
        <button class="tip-btn" onclick="selectOption('Flashcard')">Flashcard</button>
        <button class="tip-btn" onclick="selectOption('Mid-term exam')">Mid-term exam</button>
        <button class="tip-btn" onclick="selectOption('Final exam')">Final exam</button>
      </div>
      <button class="generate-btn" onclick="generateContent()">Generate</button>
    </div>
    
    

    <div class="help-center">
      <i class="bi bi-exclamation-circle" id="help-icon"></i>
      <p class="help-text">Help Center</p>
    </div>
  </div>
</div>


<!-- Modal Background -->
<div class="modal-background" id="login-modal">
  <div class="modal-content">
    <h2 class="modal-title">Login</h2>
    <button class="close-btn" id="login-close-btn">&times;</button> <!-- 닫기 버튼 추가 -->
    <form id="login-form">
      <label for="email">Email</label>
      <input type="text" id="email" placeholder="Email" required>

      <label for="password">Password</label>
      <div class="password-container">
        <input type="password" id="password" placeholder="Password" required>
        <i class="toggle-password bi bi-eye-slash"></i>
      </div>

      <p class="error-message" id="error-message" style="display: none;">
        Email or password aren't valid.
      </p>

      <button type="submit" class="login-btn">Log in</button>

      <p class="signup">
        Don't have an account? <a href="#">Sign Up</a>
      </p>
    </form>
  </div>
</div>

        

        <div class="modal-background" id="signup-modal">
          <div class="modal-content">
            <h2 class="modal-title">Create your account</h2>
            <button class="close-btn" id="signup-close-btn">&times;</button>
            <form id="signup-form">
              <label for="email">Email</label>
              <input type="text" id="email" placeholder="Email" required>
              
              <label for="password">Password</label>
              <div class="password-container">
                <input type="password" id="password" placeholder="Password" required>
                <i class="toggle-password bi bi-eye-slash"></i>
              </div>
        
              <button type="submit" class="get-started-btn">Get started</button>
              
              <p class="terms">
                By creating an account, I agree to StudentAssistant’s
                <a href="#">Website Terms</a>, <a href="#">Privacy Policy</a>, and
                <a href="#">Licensing Terms</a>.
              </p>
              <p class="signup">
                Already have an account? <a href="#">Log in</a>
              </p>
            </form>
          </div>
        </div>
        
        

      <footer id="main-footer" class="text-center justify-content-center bg-white fixed-bottom">
        <div class="container">
          <div class="row">
            <div class="col">
              <p>Copyright &copy;
                <span id="year">2024</span> studentassistant.com </p>
            </div>
          </div>
        </div>
      </footer>
      <script src="/js/modal-login.js" defer></script>
      <script src="/js/modal-signinup.js" defer></script>
      <script src="/js/modal-uploadhub.js" defer></script>
    </body>
</html>