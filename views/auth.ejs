</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a href="/main_screen" class="navbar-brand"><img src="/images/yellow_logo.png" /></a>
          <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto">
              <li class="nav-item active">
                <a href="#" class="nav-link">Quizzes</a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">Templates</a>
              </li>
              <li class="nav-item">
                <a href="/community" class="nav-link">Community</a>
              </li>
              <li class="nav-item">
                <a href="/edubot" class="nav-link">EduBot</a>
              </li>
            </ul>

            <div class="navbar-nav ms-auto">
              <li class="nav-item">
                <a href="#" class="nav-link" id="log-in">Log In</a> 
              </li>
              <li class="nav-item">
                <button type="button" class="btn"><a href="#" class="nav-link ">Sign Up</a></button>
              </li>
            </div>
          </div>
        </div>
      </nav>


      <div class="sidebar-container">
        <div class="user-card">
            <div class="avatar-circle"></div>
            <div class="user-info">username</div>
            <div class="user-info">email</div>
        </div>
        <div class="sidebar-links">
            <a href="#">Edit my profile</a>
            <a href="#">Delete account</a>
            <a href="#">Logout</a>
        </div>
    </div>
    
    <div class="profile-edit-section">
        <a href="#" class="navigation-back">&lt; Back</a>
        <h2>Profile image</h2>
        <div class="profile-image-container">
            <div class="current-profile-image"></div>
            <div class="selectable-images">
                <img src="avatar1.png" alt="Avatar 1">
                <img src="avatar2.png" alt="Avatar 2">
                <img src="avatar3.png" alt="Avatar 3">
            </div>
        </div>
    
        <div class="input-field">
            <label for="email">Email</label>
            <input type="email" id="email" value="abdulhamid_2@naver.com">
        </div>
    
        <div class="input-field">
            <label for="username">Username</label>
            <input type="text" id="username" value="Sam">
        </div>
    
        <div class="input-field">
            <label for="description">Short description about yourself</label>
            <textarea id="description"></textarea>
        </div>
    
        <button class="save-profile-button">Save</button>
    </div>
        
        

      <footer id="main-footer" class="text-center justify-content-center bg-white fixed-bottom">
        <div class="container">
          <div class="row">
            <div class="col">
              <p>Copyright &copy;
                <span id="year">2024</span> studentassistant.com </p>
            </div>
          </div>
        </div>
      </footer>
      <script src="/js/modal-login.js" defer></script>
      <script src="/js/modal-signinup.js" defer></script>
      <script src="/js/modal-uploadhub.js" defer></script>
